{% extends "layout.njk" %}

{% block content %}
    <html>
        <main class="main-content margin-page">
            <section class="cards">
                {% for item in items %}
                    <div class="food-item">
                        <img class="image" src="{{ item.image }}"/>
                        <hgroup>
                            <h1 class="name">{{ item.title }}</h1>
                        </hgroup>
                        <p class="chef">{{ item.author }}
                        </p>
                    </div>
                {% endfor %}
            </section>
        </main>
    {% endblock %}